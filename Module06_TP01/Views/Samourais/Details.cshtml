@model BO.Samourai

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Samourai</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Force)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Force)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>

        @if (Model.Arme != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Arme)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Arme.Nom)
            </dd>
        }
        @if (Model.ArtMartials != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.ArtMartials)
            </dt>
            foreach (BO.ArtMartial a in Model.ArtMartials)
            {
                <dd>
                    @a.Nom
                </dd>
            }

        }
        <dt>
            Potentiel
        </dt>

        <dd>
            @ViewBag.Potentiel
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
