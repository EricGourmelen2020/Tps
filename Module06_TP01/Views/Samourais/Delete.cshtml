@model BO.Samourai

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Samourai</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Force)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Force)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>

        @if (Model.Arme != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Arme)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Arme.Nom)
            </dd>
        }
        @if (Model.ArtMartials != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.ArtMartials)
            </dt>
            foreach (BO.ArtMartial a in Model.ArtMartials)
            {
                <dd>
                    @a.Nom
                </dd>
            }

        }
        <dt>
            Potentiel
        </dt>

        <dd>
            @ViewBag.Potentiel
        </dd>


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
